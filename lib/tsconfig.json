{
  "compilerOptions": {
    "baseUrl": "src",
    "outDir": "./",
    "sourceMap": true,
    "noImplicitAny": false,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "lib": ["ESNext", "dom"],
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "declaration": true,
    "downlevelIteration": true,
    "module": "esNext",
    "target": "es2015",
    "skipLibCheck": true,
    "jsx": "preserve"
  },
  "include": ["src"],
  "exclude": [
    "node_modules"
  ]
}


